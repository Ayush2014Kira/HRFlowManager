# Local Development Environment Variables
# Copy this file and rename to .env for local development

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/hrms_db"

# Session Security
SESSION_SECRET="your-super-secret-session-key-change-this-in-production"

# Development Mode
NODE_ENV="development"

# Server Configuration
PORT=5000

# Optional API Keys (Features work without these, but enhanced with them)

# OpenAI API Key for AI Document Generation
# Get from: https://platform.openai.com/api-keys
# OPENAI_API_KEY="sk-your-openai-api-key-here"

# SendGrid API Key for Email Notifications
# Get from: https://app.sendgrid.com/settings/api_keys
# SENDGRID_API_KEY="SG.your-sendgrid-api-key-here"

# eSSL Integration (Optional - for biometric devices)
# ESSL_DEVICES='[{"ip":"192.168.1.100","port":4370,"name":"Main Office"}]'

# GPS Tracking Configuration (Optional)
# ENABLE_GPS_TRACKING="true"
# GPS_UPDATE_INTERVAL="30000"

# Company Configuration
DEFAULT_COMPANY_NAME="Your Company Name"
DEFAULT_ADMIN_USERNAME="admin"
DEFAULT_ADMIN_PASSWORD="admin123"

# Email Configuration (Optional)
# FROM_EMAIL="noreply@yourcompany.com"
# FROM_NAME="HR Management System"